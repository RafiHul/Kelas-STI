<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="380dp"
    android:layout_height="324dp"
    app:cardCornerRadius="28dp"
    android:backgroundTint="#E5E7EB"
    tools:context=".presentation.dialog.home.DialogAddOrUpdateTasksFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewHeaderTugas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/inter"
            android:text="Tambah Tugas"
            android:textColor="@color/black"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewPilihDosenIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/baseline_people_24"
            app:layout_constraintStart_toStartOf="@+id/textViewHeaderTugas"
            app:layout_constraintTop_toBottomOf="@+id/textViewHeaderTugas" />

        <Spinner
            android:id="@+id/spinnerDosenName"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/spinner_add_transaksi"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewPilihDosenIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewPilihDosenIcon"
            app:layout_constraintTop_toTopOf="@+id/imageViewPilihDosenIcon" />

        <ImageView
            android:id="@+id/imageViewTitleIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/h1_svgrepo_com"
            app:layout_constraintStart_toStartOf="@+id/textViewHeaderTugas"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPilihDosenIcon" />

        <EditText
            android:id="@+id/editTextTitleTugas"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/input_add_transaksi"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:hint="Title"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewTitleIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewTitleIcon"
            app:layout_constraintTop_toTopOf="@+id/imageViewTitleIcon" />

        <ImageView
            android:id="@+id/imageViewDeskripsiIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/outline_edit_24"
            app:layout_constraintStart_toStartOf="@+id/textViewHeaderTugas"
            app:layout_constraintTop_toBottomOf="@+id/imageViewTitleIcon" />

        <EditText
            android:id="@+id/editTextDeskripsiTugas"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/input_add_transaksi"
            android:ems="10"
            android:fontFamily="@font/inter"
            android:hint="Deskripsi"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewDeskripsiIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageViewDeskripsiIcon"
            app:layout_constraintTop_toTopOf="@+id/imageViewDeskripsiIcon" />

        <ImageView
            android:id="@+id/imageViewPilihTanggalDeadlineTugasIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:src="@drawable/clock_two_svgrepo_com"
            app:layout_constraintStart_toStartOf="@+id/textViewHeaderTugas"
            app:layout_constraintTop_toBottomOf="@+id/imageViewDeskripsiIcon" />

        <Button
            android:id="@+id/buttonDeadlineTugas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Deadline"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageViewPilihTanggalDeadlineTugasIcon"
            app:layout_constraintStart_toEndOf="@+id/imageViewPilihTanggalDeadlineTugasIcon"
            app:layout_constraintTop_toTopOf="@+id/imageViewPilihTanggalDeadlineTugasIcon" />

        <TextView
            android:id="@+id/textViewBatalAddTugas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/inter"
            android:text="Batal"
            android:clickable="true"
            android:textColor="@color/pengeluaran_kas"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/textViewTambahkanTugas"
            app:layout_constraintEnd_toStartOf="@+id/textViewTambahkanTugas" />

        <TextView
            android:id="@+id/textViewTambahkanTugas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:clickable="true"
            android:fontFamily="@font/inter"
            android:text="Tambahkan"
            android:textColor="#29FF01"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonDeadlineTugas" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>